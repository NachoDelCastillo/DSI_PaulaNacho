<Page
    x:Class="G17_PaulaNacho_DSI.Tienda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:G17_PaulaNacho_DSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!--<Style x:Key="Card" TargetType="Button">
            <Setter Property="BorderThickness" Value="5" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="170"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontFamily" Value="TimesNewRoman"/>

        </Style>-->

        <Style x:Key="CardTemplate" TargetType="Button">

            <Setter Property="BorderThickness" Value="5" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Height" Value="170"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontFamily" Value="TimesNewRoman"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Vertical" Spacing="2" Background="White" BorderBrush="Black" CornerRadius="8" BorderThickness="5">
                            <Image Source="Assets/Iconos/incognito.png" Height="70" VerticalAlignment="Top"/>
                            <StackPanel Orientation="Horizontal" Spacing="2" >
                                <TextBlock FontSize="20" TextWrapping="Wrap" 
                               Text="100" Width="59" Height="30" VerticalAlignment="Center" TextAlignment="Center" Margin="0,0,0,-1"/>
                                <Image Source="Assets/Iconos/dinero.png" Height="30"/>
                            </StackPanel>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border Background="MidnightBlue"/>
        <Border Grid.Row="1" Background="#2f5cb6"/>
        <Border Grid.Row="2" Background="DodgerBlue"/>

        <ScrollViewer x:Name="MainImageScroller"
                      Grid.Row="1"
                      ZoomMode="Enabled"
                      HorizontalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      IsTabStop="True"
                      TabIndex="2">

            <StackPanel Grid.Row="1"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal"  
                    Spacing="100">

                <StackPanel Grid.Row="1"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="100">

                    <!--<Button Background="Gray" BorderBrush="White" Style="{StaticResource CardTemplate}">
                        <StackPanel Orientation="Vertical" Spacing="2" >
                            <Image Source="Assets/Iconos/incognito.png" Height="70" VerticalAlignment="Top"/>
                            <StackPanel Orientation="Horizontal" Spacing="2" >
                                <TextBlock FontSize="20" TextWrapping="Wrap" 
                               Text="100" Width="38" Height="30" VerticalAlignment="Center" TextAlignment="Center" Margin="0,0,0,-1"/>
                                <Image Source="Assets/Iconos/dinero.png" Height="30" VerticalAlignment="Top"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>-->

                    <Button  Style="{StaticResource CardTemplate}" Height="134" Width="109"/>


                    <!--<Button Background="Gray" BorderBrush="White" Style="{StaticResource Card}">
                        <StackPanel Orientation="Vertical" Spacing="2" >
                            <Image Source="Assets/Iconos/incognito.png" Height="70" VerticalAlignment="Top"/>
                            <StackPanel Orientation="Horizontal" Spacing="2" >
                                <TextBlock FontSize="20" TextWrapping="Wrap" 
                               Text="100" Width="38" Height="30" VerticalAlignment="Center" TextAlignment="Center" Margin="0,0,0,-1"/>
                                <Image Source="Assets/Iconos/dinero.png" Height="30" VerticalAlignment="Top"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>-->

                </StackPanel>
                <StackPanel Grid.Row="1"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="100">

                    <Button Background="Yellow" BorderBrush="YellowGreen">
                        <StackPanel Orientation="Vertical" Spacing="2" >
                            <Image Source="Assets/Iconos/historia.png" Height="50" VerticalAlignment="Top"/>
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center" Text="Historia"></TextBlock>
                            <TextBlock FontSize="13" TextWrapping="Wrap" 
                               Text="Embárcate en esta aventura para salvar el reino de Oniria"></TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Background="DeepSkyBlue" BorderBrush="DarkSlateBlue">
                        <StackPanel Orientation="Vertical" Spacing="2" >
                            <Image Source="Assets/Iconos/lucha.png" Height="50" VerticalAlignment="Top"/>
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center" Text="Lucha"></TextBlock>
                            <TextBlock FontSize="13" TextWrapping="Wrap" Text="¡Aguanta luchando contra los enemigos más fuertes!"></TextBlock>
                        </StackPanel>
                    </Button>

                    <Button Background="Yellow" BorderBrush="YellowGreen">
                        <StackPanel Orientation="Vertical" Spacing="2" >
                            <Image Source="Assets/Iconos/historia.png" Height="50" VerticalAlignment="Top"/>
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center" Text="Historia"></TextBlock>
                            <TextBlock FontSize="13" TextWrapping="Wrap" 
                               Text="Embárcate en esta aventura para salvar el reino de Oniria"></TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>


        </ScrollViewer>
    </Grid>
</Page>
