<Page
    x:Class="G17_PaulaNacho_DSI.Tienda"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:G17_PaulaNacho_DSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="StackPanel_Template" TargetType="StackPanel">
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Spacing" Value="45"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!--DIVIDIR PANTALLA CON COLORES-->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border Background="MidnightBlue"/>
        <Border Grid.Row="1" Grid.RowSpan="2" Background="#2f5cb6"/>
        <Border Grid.Row="3" Background="DodgerBlue"/>

        <!--AJUSTES-->
        <Button Click="Go_Settings"
            HorizontalAlignment ="Right" VerticalAlignment="Center" >
        <Image Source="Assets/Iconos/ajustes.png" />
        </Button>

        <!--DINERO-->
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="dineroTot"
                       FontSize="32"
                       Foreground="White"
                       TextAlignment="Center"
                       Text="1200"
                       Margin="10,5,5,5"
                       FontWeight="Bold" Height="51">
            </TextBlock>
            <Image Source="Assets/Iconos/dinero.png"  Margin="15" />
        </StackPanel>

        <!--TITULO DE ZONA-->
        <Grid Grid.Row="1">
            <Image Width="800" VerticalAlignment="Center" HorizontalAlignment="Center" Source="Assets/Iconos/banner.png"/>
            <TextBlock Text="TIENDA" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold"/>
        </Grid>

        
        <!--ZONA DE INTERES-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="2">
            <GridView ItemsSource="123456789ABDCDEFGHIJKLMNOPQRSTU" Width="976" Height="536">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Button  Margin="20" Background="DarkGray" BorderBrush="Black" CornerRadius="8" BorderThickness="5">
                            <StackPanel Orientation="Vertical" Spacing="2" > 
                                <Image Source="Assets/Iconos/sword.png" Height="70" VerticalAlignment="Top"/>
                                <StackPanel Orientation="Horizontal" Spacing="2" >
                                    <TextBlock FontSize="20" TextWrapping="Wrap" 
                               Text="100" Width="59" Height="30" VerticalAlignment="Center" TextAlignment="Center" Margin="0,0,0,-1"/>
                                    <Image Source="Assets/Iconos/dinero.png" Height="30"/>
                                </StackPanel>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>

        
        <!--SELECTOR MENU-->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="100">
            <Button>
                <Image Source="Assets/Iconos/tienda.png" HorizontalAlignment="Right" Margin="5 " />
            </Button>
            <Button Click="Go_SelectScreen">
                <Image Source="Assets/Iconos/gamepad.png" HorizontalAlignment="Right" Margin="5" Height="60"/>
            </Button>
            <Button Click="Go_DeckCreator">
                <Image Source="Assets/Iconos/mazo.png" HorizontalAlignment="Right" Margin="5" Height="60"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
